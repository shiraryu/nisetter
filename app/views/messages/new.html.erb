<div class = "container">
  <div class = "col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <br>
    <br>
    <h3>メッセージを作成する</h3>
    <br>
    <br>
    <%= form_for(@message,url:confirm_messages_path) do |f| %>
      <% if @message.errors.any? %>
      <div id="error_explanation">
        <h2><%= @message.errors.count %>件のエラーがあります。</h2>
        
        <ul>
          <% @message.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <%= f.label :name %>
      <%= f.text_field :name %>
      <br>
      <br>
      <%= f.label :email %>
      <%= f.text_field :email %>
      <br>
      <br>
      <%= f.label :content %>
      <%= f.text_field :content %>
      <br>
      <br>
      <%= f.submit'送信',class:'btn btn-block' %>
    <% end %>
  </div>
</div>